#include "ft_ls.h"


void		print_type(mode_t mode)
{
	char c;

	if ((mode & S_IFREG)== S_IFREG)
		c = '-';
	if ((mode & S_IFDIR) == S_IFDIR)
		c = 'd';
	if ((mode & S_IFCHR) == S_IFCHR)
		c = 'c';
	if ((mode & S_IFBLK) == S_IFBLK)
		c = 'b';
	if ((mode & S_IFLNK) == S_IFLNK)
		c = 'l';
	if ((mode & S_IFSOCK) == S_IFSOCK)
		c = 's';
	if ((mode & S_IFIFO) == S_IFIFO)
		c = 'p';
	ft_printf("%c", c);
}

void	print_mode(mode_t mode)
{
	const char	chars[] = "rwxrwxrwx";
	char		buf[10];
	size_t		i;

	i = 0;
	while (i < 9)
	{
		buf[i] = (mode & (1 << (8 - i))) ? chars[i] : '-';
		i++;
	}
	buf[9] = '\0';
	print_type(mode);
	ft_printf("%s", buf);
}

void		print_all(t_data *val)
{
	if (!OPT.l)
		ft_printf("%s\n", val->name);
	else
		print_mode

}



void		print_wfolder(t_list **lst)
{
	t_data	*val;
	t_list	*t;
	t_list	*prev;

	t = *lst;
	prev = NULL;
	while (t)
	{
		val = (t_data *)t->content;
		if (!val->error)
		{
			ft_wrong_folder(val->name);
			t = ft_deldate(prev, t, lst);
		}
		else
		{
			prev = t;
			t = t->next;
		}
	}
}

void		print_ofolder(t_list **lst, t_env *env)
{
	t_data	*val;
	t_list	*t;
	t_list	*prev;

	t = *lst;
	prev = NULL;
	while (t)
	{
		val = (t_data *)t->content;
		if (val->folder)
		{
			print_all(val, env);
			t = ft_deldate(prev, t, lst);
		}
		else
		{
			prev = t;
			t = t->next;
		}
	}
}
